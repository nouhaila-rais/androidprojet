<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/LinearLayout_rechercher_produit_achat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="55dp"
        android:alwaysDrawnWithCache="false"
        android:background="@drawable/my_custom_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:transitionGroup="false">

        <ImageView
            android:id="@+id/imageView_image_recherche_achat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:cropToPadding="false"
            app:srcCompat="@drawable/erreurpicture" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView_nomProduit_recherche_achat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Pc Dell"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView_ratingStar_recherche_achat"
            android:layout_width="144dp"
            android:layout_height="28dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/s40" />

        <TextView
            android:id="@+id/textView_etatProduit_recherche_achat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Bonne etat"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView_prix_recherche_achat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="250.00 EUR"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>